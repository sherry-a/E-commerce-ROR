<% if current_user && current_user.role == 0 %>

    <%= turbo_frame_tag "cart" do %>
    <div class="p-5">
        <h1 style="text-align: center; font-weight: bold;">Your Cart</h1>
        <% if @cart.orderables.count > 0 %>
            <%= render "cart/orderables" %>
        <% else %>
            <div class="d-flex justify-content-center">
                <p style="font-weight: bold; font-size: 20px">Cart is empty</p>   
            </div> 
        <% end %>
    </div>
    <% end %>

<% end %>