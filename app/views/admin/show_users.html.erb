
<main class="p-5">
    <h1 style="font-weight: bold; text-align: center;">Users</h1>

    <div class="mt-5 d-flex justify-content-center align-items-center flex-wrap" style="gap: 100px">
    
        <% @users.each do |user| %>
            <div class="d-flex flex-column justify-content-center p-3 shadow-lg" style="border: 1px solid #194270; border-radius: 10px">
                <p><strong>Name: </strong> <%= user.name %></p>
                <p><strong>Email: </strong> <%= user.email %></p>
                
                <% if user == current_user %>
                    <div class="d-flex justify-content-center">
                        <p class="text-white m-0 px-3 py-2 mt-3" style="background-color: #24bdd1; border-radius: 5px">Currenlty Logged In</p>
                    </div>
                <% else %>
                    <div class="d-flex justify-content-center">
                        <%= form_with(url: admin_destroy_path) do |f| %>
                            <%= f.hidden_field :id, value: user.id %>
                            <div class="mt-3">
                                <%= f.submit "Delete User", class: "btn btn-danger btn-mini" %>
                            </div>
                        <% end %>
                    </div>
                <% end %>
            </div>
        <% end %>
    
    </div>

</main>


