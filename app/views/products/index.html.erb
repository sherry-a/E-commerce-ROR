<style>
    .btn-style{
        background-color: #194270;
        color: white;
        transition: all 0.3s ease;
        width: 180px
    }

    .btn-style-2{
        background-color: #24bdd1;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-style:hover, .btn-style-2:hover{
        color: white;
        transition: all 0.3s ease;
        transform: scale(1.1)
    }
</style>

<main class="p-5">
  <h1 style="font-weight: bold; text-align:center" class="pb-2">Products</h1>

  <div id="products" class="d-flex flex-wrap justify-content-center" style="gap: 50px">
    <% if @products.count > 0 %>
      <% @products.each do |product| %>

        <div style="width: 300px; height: 45vh; border-width: 2px; border-radius: 15px" class="my-5 border border-primary d-flex flex-column align-items-center shadow-lg">
          <div class="d-flex justify-content-center align-items-center" style="height: 60%">
            <%= image_tag(product.image_as_thumbnail) %>
          </div>
          <div class="d-flex flex-column p-2 justify-content-center align-items-center">
          <p><%= product.name %></p>
          <h3 style="font-weight: bold; color: #194270">Rs. <%= product.price %></h3>
          </div>
          <%= link_to "Show Product", product, class: "btn btn-style" %>
        </div>

      <% end %>
    <% else %>
      <div class="m-5">
        <p style="font-size: 30px">No Products Found</p>
      </div>
    <% end %>
  </div>

</main>